<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_neues"
        app:title="Neues Wertpapier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme = "@style/Theme.AppCompat.Light"
        android:theme="?attr/actionBarTheme"
        app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tV_neues_Symbol"
            android:text="Symbol"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/eT_neues_Symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="Symbol"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tV_neues_Name"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/eT_neues_Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="Name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tV_neues_Kaufpreis"
            android:text="Kaufpreis:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/eT_neues_Kaufpreis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:inputType="number"
            android:text="Kaufpreis"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tV_neues_buyDate"
            android:text="Datum:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/eT_Symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:inputType="date"
            android:text="Datum"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/tV_neues_Spesen"
            android:text="Spesen:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/eT_neues_Spesen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="Spesen"/>
    </LinearLayout>
</LinearLayout>